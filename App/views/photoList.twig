<table class="table table-bordered">
    <tr>
        <th>Название файла</th>
        <th>Фотография</th>
        <th>Описание</th>
        <th>Действия</th>
    </tr>
    {% for key , item in data %}
        {% if item.files %}
            {% for  value , val in item.files %}
                <tr>
                    <td> {{ val.filename }} </td>
                    <td><img class="image" src="../photos/{{ val.image }} "
                             alt=" {{ val.image }} " width="100" height="100"> <img></td>
                    <td> {{ val.desc }} </td>
                    <td>
                        <form name="ddd" action="../../index.php" method="post">
                            <input type="hidden" name="id" value="{{ val.id }}">
                            <input type="hidden" name="pic"
                                   value="{{ val.image }} ">
                            <input id="{{ val.id }}"
                                   name="del"
                                   type="submit"
                                   value="удалить заказ">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        {% endif %}
    {% endfor %}
</table>